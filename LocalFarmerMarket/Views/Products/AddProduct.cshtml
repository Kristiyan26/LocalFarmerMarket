@model LocalFarmerMarket.Core.Models.RequestDTOs.ProductCreateRequest

<div class="container mt-5">
    <h2 class="text-center mb-4">➕ Add a New Product</h2>

    <form asp-action="AddProduct" asp-controller="Products" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Product Name:</label>
            <input type="text" id="name" name="Name" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="Description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label for="pricePerKg" class="form-label">Price Per Kg (€):</label>
            <input type="number" id="pricePerKg" name="PricePerKg" class="form-control" min="0.01" step="0.01" required>
        </div>

        <div class="mb-3">
            <label for="quantityAvailable" class="form-label">Quantity Available (kg):</label>
            <input type="number" id="quantityAvailable" name="QuantityAvailable" class="form-control" min="1" required>
        </div>

        <div class="mb-3">
            <label for="harvestDate" class="form-label">Harvest Date:</label>
            <input type="date" id="harvestDate" name="HarvestDate" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="categoryId" class="form-label">Category ID:</label>
            <input type="number" id="categoryId" name="CategoryId" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="imageUrl" class="form-label">Image URL:</label>
            <input type="text" id="imageUrl" name="ImageUrl" class="form-control" placeholder="Enter image path or URL">
        </div>

        <button type="submit" class="btn btn-success w-100">➕ Add Product</button>
    </form>
</div>